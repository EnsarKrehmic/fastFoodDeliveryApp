<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.ProfilePage"
             Title="Profile"
             Padding="20"
             BackgroundImageSource="categories.jpg"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10">
                <!-- Header Section -->
                <Label Text="KORISNIČKI PROFIL" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       TextColor="#333"
                       FontFamily="Arial"
                       Margin="0,10,0,20"/>

                <!-- Profile Details -->
                <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                    <StackLayout Spacing="5">
                        <Label Text="Ime:" FontSize="16" TextColor="#666" FontFamily="Arial"/>
                        <Label x:Name="NameLabel" FontSize="18" TextColor="#000" FontFamily="Arial" FontAttributes="Bold"/>

                        <Label Text="Email:" FontSize="16" TextColor="#666" FontFamily="Arial" Margin="0,10,0,0"/>
                        <Label x:Name="EmailLabel" FontSize="18" TextColor="#000" FontFamily="Arial" FontAttributes="Bold"/>
                    </StackLayout>
                </Frame>

                <!-- Password Change Section -->
                <Label Text="PROMJENA LOZINKE" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="#333" 
                       FontFamily="Arial" 
                       Margin="0,20,0,10"/>
                
                <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                    <StackLayout Spacing="15">
                        <Entry x:Name="UsernameEntry" 
                               Placeholder="E-mail" 
                               Text="{Binding Username}" 
                               IsEnabled="False" 
                               TextColor="#999" 
                               FontFamily="Arial" 
                               BackgroundColor="#F0F0F0"/>

                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Nova lozinka" 
                               Text="{Binding Password}" 
                               IsPassword="True" 
                               TextColor="#333" 
                               FontFamily="Arial"
                               BackgroundColor="#F0F0F0"/>

                        <Entry x:Name="ConfirmPasswordEntry" 
                               Placeholder="Potvrdi lozinku" 
                               IsPassword="True" 
                               TextColor="#333" 
                               FontFamily="Arial"
                               BackgroundColor="#F0F0F0"/>
                    </StackLayout>
                </Frame>

                <!-- Buttons Section -->
                <Button Text="Sačuvaj promjene" 
                        Command="{Binding SaveCommand}" 
                        BackgroundColor="#4CAF50" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        FontFamily="Arial" 
                        CornerRadius="20"
                        HeightRequest="50"/>

                <Button Text="Odjavi se" 
                        FontSize="16" 
                        BackgroundColor="#F44336" 
                        TextColor="White" 
                        Clicked="OnLogoutClicked"
                        FontAttributes="Bold" 
                        FontFamily="Arial" 
                        CornerRadius="20" 
                        HeightRequest="50"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>